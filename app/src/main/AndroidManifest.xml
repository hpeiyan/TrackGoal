<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="club.peiyan.goaltrack">

    <application
        android:name=".GoalApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".FeedBackActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".PushQAActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".ScoreActivity"/>
        <activity
            android:name=".SettingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".AboutActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".QAActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".ReLoginActivity"/>
        <activity
            android:name=".LoadingActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".DownCountService"
            android:enabled="true"
            android:exported="false"
            />

        <receiver android:name=".AlarmBroadcastReceiver"/>

        <!-- 配置APP ID -->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="02ecca046e"/>
        <!-- 配置APP版本号 -->
        <meta-data
            android:name="BUGLY_APP_VERSION"
            android:value="1.0.0"/>
        <!-- 配置APP渠道号 -->
        <meta-data
            android:name="BUGLY_APP_CHANNEL"
            android:value="debug"/>
        <!-- 配置Bugly调试模式（true或者false）-->
        <meta-data
            android:name="BUGLY_ENABLE_DEBUG"
            android:value="true"/>


        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5b51f571f43e48294800022f"/>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}"/>

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--后续需要上架Google store 需要删掉READ_PHONE_STATE权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>