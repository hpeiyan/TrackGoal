<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_normal_margin"
        android:background="@drawable/selector_parent_goal_item"
        android:clickable="true"
        android:translationZ="@dimen/translation_z"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/llParent"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/item_normal_margin"
                      android:layout_marginLeft="@dimen/item_normal_margin"
                      android:layout_marginRight="90dp"
                      android:layout_marginTop="@dimen/item_normal_margin"
                      android:orientation="vertical"
                      android:paddingBottom="8dp"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp"
            >

            <ProgressBar
                android:id="@+id/pbGoal"
                style="@style/MyProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHoldCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="32天"
                    android:textColor="@color/secondTextColor"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/tvGoalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tvDownCount"
                    android:layout_toRightOf="@+id/tvHoldCount"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/sub_3_goal_color"
                    android:textSize="@dimen/text_title_dimen"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDownCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="32天"
                    android:textColor="@color/secondTextColor"
                    android:textSize="25sp"
                    android:textStyle=""/>

            </RelativeLayout>


            <include layout="@layout/layout_time_edit"/>

            <include layout="@layout/layout_alarm_info"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:text="编辑"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="删除"
            android:textColor="@color/md_white_1000"/>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="@dimen/translation_z">

        <RelativeLayout
            android:id="@+id/rlDone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/item_normal_margin"
                android:background="#33F5F5F5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_goal_done"/>
        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_tag_root"
            android:visibility="gone"
            />

    </RelativeLayout>
</FrameLayout>
