<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rlCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCostShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_label_outline_black_24dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="今日用时: "
            android:textColor="@color/secondTextColor"
            android:textSize="@dimen/text_show_dimen"/>

        <TextView
            android:id="@+id/tvCostTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tvCostShow"
            android:padding="12dp"
            android:text="00:00:00"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_title_dimen"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlCost"
        >

        <ImageView
            android:id="@+id/ivTimeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tvRemainTime"
            android:src="@mipmap/ic_timer_black_24dp"/>

        <TextView
            android:id="@+id/tvRemainTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="12dp"
            android:text="@string/start_downcount"
            android:textColor="@color/secondTextColor"
            android:textSize="@dimen/text_show_dimen"
            />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tvRemainTime"
            android:src="@mipmap/ic_close_black_24dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>