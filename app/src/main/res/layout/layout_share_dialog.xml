<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    >

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_above="@+id/tvMessage"
        android:layout_marginBottom="58dp"
        />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llWeChat"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        />

    <LinearLayout
        android:id="@+id/llWeChat"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_above="@+id/vLine"
        android:layout_marginTop="45dp"
        android:background="@color/md_white_1000"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvWeChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/selector_wechat"
            android:gravity="center"
            android:text="微信"/>

        <TextView
            android:id="@+id/tvWeChatMoment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/selector_wechat_moment"
            android:gravity="center"
            android:text="朋友圈"/>
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/tvCancel"
        android:background="@color/dividerColor"
        />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/md_white_1000"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FF666666"
        android:textSize="16sp"
        />
</RelativeLayout>